#include <iostream>

using namespace std;

int main(void) {
    char name [20];

    cout << endl << "Hi, what's your name?";

    cin >> name;
    
    cin.getline(name, 256);

    cout << "Hi, " << name << endl;

    cerr << "This is an error..." << endl;

    clog << "The contents of the name variable: " << name << endl;

    return 0;
}
